<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="smud.org.wmLM01.controller.GrItem" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
	<Page showHeader="true" title="Goods Receipt" showFooter="true" showNavButton="false">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Plant" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpGrItemPlant" value="{/Werks}" type="Text" showValueHelp="false" enabled="true" visible="true" width="75px"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="4"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="SLoc" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpGrItemStoreLoc" value="{/Lgort}" type="Tel" description="" showValueHelp="false" enabled="true" visible="true" width="75px"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="4" liveChange="checkNumber"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Movement" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input type="Text" showValueHelp="false" editable="false" visible="true" width="50px" valueHelpOnly="false" required="false"
										valueStateText="Invalid entry" maxLength="3" value="101"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="PO #" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpGrItemPoNumber" value="{/Ebeln}" type="Tel" showValueHelp="false" editable="false" visible="true" width="150px"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="10" liveChange="checkNumber"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Item" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpGrItemItem" value="{/Ebelp}" type="Tel" showValueHelp="false" editable="false" visible="true" width="75px"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="5" liveChange="checkNumber"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Material/UPC" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpGrItemMaterial" value="{/Matnr}" description="{/Maktg}" type="Text" showValueHelp="false" editable="false" visible="true"
										width="auto" fieldWidth="30%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="18"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Open" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpGrItemOpenQty" value="{/Menge}" description="{/Meins}" type="Number" showValueHelp="false" editable="false" visible="true"
										width="150px" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Confirm" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="true" displayInline="false">
										<items>
											<Input id="inpGrItemConfQty" liveChange="liveChangeQty" value="{/MengeConfirm}" description="{/Meins}" type="Number" showValueHelp="false" enabled="true"
												visible="true" width="150px" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
											<Button id="btnGrItemConfQty" type="Default" icon="sap-icon://bar-code" iconFirst="true" width="50px" enabled="true" visible="true"
												iconDensityAware="false" press="scan"/>
										</items>
										<layoutData/>
									</HBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label id="lblSN" visible="false" text="Serial Numbers" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
								</form:label>
								<form:fields>
									<VBox id="vboxSN" alignItems="Stretch" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="{/serialNumbersRequired}" displayInline="false">
										<items></items>
										<layoutData/>
									</VBox>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true"
						iconDensityAware="false" press="save"/>
					<Button text="Text" type="Default" iconFirst="true" width="auto" enabled="true" visible="true"
						iconDensityAware="false" press="text"/>
					<Button text="Requestor" type="Default" iconFirst="true" width="auto" enabled="true" visible="true"
						iconDensityAware="false" press="requestor"/>
					<ToolbarSpacer width=""/>
					<Button text="Prev" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true"
						iconDensityAware="false" press="previous"/>
					<Button text="Next" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true"
						iconDensityAware="false" press="next"/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>