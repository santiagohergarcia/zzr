<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="smud.org.wmLM01.controller.PutawayItem" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
	<Page showHeader="true" title="Enter Putaway Qty and Bin" showFooter="true" showNavButton="false">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Material/UPC" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpMaterial" value="{/Material}" description="{/Description}" type="Text" showValueHelp="false" editable="false" visible="true"
										width="100%" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="18"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label id="lblConsignmentVendor" text="Consignment Vendor" width="100%" required="false" textAlign="Begin" textDirection="Inherit"
										visible="{/consignment}"/>
								</form:label>
								<form:fields>
									<Input id="inpConsignmentVendor" value="{/PutawayVendor}" type="Text" showValueHelp="false" enabled="true" visible="{/consignment}"
										width="150px" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="16"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Qty" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpQty" type="Number" value="{/PutawayQty}" showValueHelp="false" enabled="true" visible="true" width="125px"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="UOM" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpUom" type="Text" value="{/Uom}" showValueHelp="false" editable="false" visible="true" width="75px" valueHelpOnly="false"
										required="false" valueStateText="Invalid entry" maxLength="3"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Bin Loc" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<ComboBox id="inpBinLoc" value="{/BinConfirm}" selectionChange="changeBinSelection" editable="true" enabled="true" visible="true"
										width="250px" valueState="None" maxWidth="100%"></ComboBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label id="lblOtherBin" text="Other Bin" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="{/otherBin}"/>
								</form:label>
								<form:fields>
									<HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="true" displayInline="false">
										<items>
											<Input id="inpOtherBin" value="{/Bin}" type="Text" showValueHelp="false" enabled="true" visible="{/otherBin}" width="125px"
												valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="10" change="uppercase" liveChange="uppercase"/>
											<Button id="btnOtherBin" type="Default" icon="sap-icon://bar-code" iconFirst="true" width="50px" enabled="true" visible="{/otherBin}"
												iconDensityAware="false" press="scan"/>
										</items>
										<layoutData/>
									</HBox>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="save"/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>