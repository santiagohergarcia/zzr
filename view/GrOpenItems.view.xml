<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="smud.org.wmLM01.controller.GrOpenItems" xmlns="sap.m">
    <Page showHeader="true" title="GR Open Items" showFooter="false" showNavButton="false">
        <content>
            <HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiTinyMargin">
                <items>
                    <Input id="inpGrOpenItemsMaterial" value="{/filterMaterial}" placeholder="Filter by Material or Description" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="18" liveChange="onChangeMaterial"/>
                    <Button text="Scan Material" type="Default" icon="sap-icon://bar-code" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false" press="scanMaterial"/>
                    <Button text="Clear Filter" type="Default" width="auto" enabled="true" visible="true" iconDensityAware="false" press="clearFilters"/>
                </items>
                <layoutData/>
            </HBox>
            <HBox id="hboxTable" alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div" visible="true" displayInline="false" class="sapUiTinyMargin">
                <items>
                    
                </items>
                <layoutData/>
            </HBox>
            
        </content>
        <footer>
            <OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
                <content>
                    <ToolbarSpacer width=""/>
                    <Button text="Save" type="Emphasized" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                    <Button text="Cancel" type="Default" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                </content>
            </OverflowToolbar>
        </footer>
        <headerContent/>
        <subHeader/>
        <customHeader/>
    </Page>
</mvc:View>