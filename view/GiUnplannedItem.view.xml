<mvc:View xmlns:mvc="sap.ui.core.mvc" class="sapUiSizeCozy" controllerName="smud.org.wmLM01.controller.GiUnplannedItem" xmlns="sap.m"
	xmlns:form="sap.ui.layout.form">
	<Page showHeader="true" title="GI Unplanned Item" showFooter="true" showNavButton="false">
		<content>
			<form:Form width="100%" editable="true" visible="true">
				<form:title/>
				<form:formContainers>
					<form:FormContainer visible="true">
						<form:formElements>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Item" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="selectedItem" value="{/itemNumberText}" type="Tel" showValueHelp="false" editable="false" visible="true" width="100px"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Order/Recip" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="true" displayInline="false">
										<items>
											<Input id="inpAufnr" value="{/Aufnr}" type="Tel" showValueHelp="false" editable="false" visible="true" width="125px" valueHelpOnly="false"
												required="false" valueStateText="Invalid entry" maxLength="10"/>
											<Input id="inpWempf" value="{/Wempf}" type="Text" showValueHelp="false" enabled="true" visible="true" width="125px" valueHelpOnly="false"
												required="false" valueStateText="Invalid entry" maxLength="12" change="uppercase"/>
											<Button id="btnWempf" type="Default" icon="sap-icon://bar-code" iconFirst="true" width="50px" enabled="true" visible="true"
												iconDensityAware="false" press="scan"/>
										</items>
										<layoutData/>
									</HBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label id="lblLifnr" text="Vendor" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="{/vendorExists}"/>
								</form:label>
								<form:fields>
									<Input id="inpLifnr" value="{/Lifnr}" type="Text" showValueHelp="false" editable="false" width="125px" visible="{/vendorExists}"
										valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="12"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Material" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="true" displayInline="false">
										<items>
											<Input id="inpMatnr" value="{/Matnr}" type="Text" showValueHelp="true" valueHelpRequest="f4Matnr" valueHelpOnly="true" enabled="true"
												description="{/Maktg}" editable="true" visible="true" width="100%" required="false" valueStateText="Invalid entry" maxLength="18"
												liveChange="changeMaterial"/>
										</items>
										<layoutData/>
									</HBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Bin" width="100%" required="true" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="true" displayInline="false">
										<items>
											<Input id="inpLgpla" value="{/Lgpla}" type="Text" showValueHelp="false" enabled="true" visible="true" width="125px" valueHelpOnly="false"
												required="false" valueStateText="Invalid entry" maxLength="10" change="changeBin"/>
											<Button id="btnLgpla" type="Default" icon="sap-icon://bar-code" iconFirst="true" width="50px" enabled="true" visible="true"
												iconDensityAware="false" press="scanBin"/>
										</items>
										<layoutData/>
									</HBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Qty" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<HBox alignItems="Stretch" direction="Row" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="true" displayInline="false">
										<items>
											<Input id="inpMenge" value="{/Menge}" type="Number" showValueHelp="false" enabled="true" visible="true" width="200px" valueHelpOnly="false"
												description="{/Meins}" required="false" valueStateText="Invalid entry" maxLength="0" change="liveChangeQty"
												editable="{= ${/serialNumbersRequired} === false }"/>
											<Button id="btnSerialNumbers" text="Select Serial Numbers" type="Default" iconFirst="true" width="auto" enabled="true"
												visible="{= ${/serialNumbersRequired} === true }" iconDensityAware="false" press="showSerialNumberSelection"/>
											<Button id="btnSerialNumbersClear" icon="sap-icon://delete" type="Default" iconFirst="true" width="auto" enabled="true"
												visible="{= ${/serialNumbersRequired} === true }" iconDensityAware="false" press="clearSerialNumberSelection"/>
										</items>
										<layoutData/>
									</HBox>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Avail. Qty" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpVerme" editable="false" value="{/Verme}" type="Number" showValueHelp="false" enabled="true" visible="true" width="200px"
										description="{/Meins}" valueHelpOnly="false" required="false" valueStateText="Invalid entry" maxLength="0"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label text="Text" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
								</form:label>
								<form:fields>
									<Input id="inpSgtxt" value="{/Sgtxt}" type="Text" showValueHelp="false" enabled="true" visible="true" width="auto" valueHelpOnly="false"
										required="false" valueStateText="Invalid entry" maxLength="50"/>
								</form:fields>
							</form:FormElement>
							<form:FormElement visible="true">
								<form:label>
									<Label id="lblSN" visible="false" text="Serial Numbers" width="100%" required="false" textAlign="Begin" textDirection="Inherit"/>
								</form:label>
								<form:fields>
									<VBox id="vboxSN" alignItems="Stretch" fitContainer="false" width="auto" height="auto" justifyContent="Start" renderType="Div"
										visible="{/serialNumbersRequired}" displayInline="false">
										<items></items>
										<layoutData/>
									</VBox>
								</form:fields>
							</form:FormElement>
						</form:formElements>
						<form:title/>
					</form:FormContainer>
				</form:formContainers>
				<form:layout>
					<form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="1" labelSpanM="2" labelSpanS="12"/>
				</form:layout>
			</form:Form>
		</content>
		<footer>
			<OverflowToolbar width="100%" height="46px" design="Auto" enabled="true" visible="true">
				<content>
					<Button text="Save" type="Emphasized" width="auto" enabled="true" visible="true" iconDensityAware="false" press="save"/>
					<Button text="Clear" type="Default" width="auto" enabled="true" visible="true" iconDensityAware="false" press="clear"/>
					<ToolbarSpacer width=""/>
					<Button text="Prev Itm" type="Emphasized" width="auto" enabled="true" visible="true" iconDensityAware="false" press="prev"/>
					<Button text="Next Itm" type="Emphasized" width="auto" enabled="true" visible="true" iconDensityAware="false" press="next"/>
				</content>
			</OverflowToolbar>
		</footer>
		<headerContent/>
		<subHeader/>
		<customHeader/>
	</Page>
</mvc:View>