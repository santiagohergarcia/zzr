<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog 
		noDataText="No Materials Found"
		title="Select Material "
		search="handleMaterialSearch"
		liveChange="handleMaterialSearch"
		confirm="handleMaterialSelect"
		cancel="handleClose"
		items="{
			path : 'matTable>/results'
		}">
		<ColumnListItem>
			<cells>
					<Text text="{matTable>Matnr}" />
					<Text text="{matTable>Maktg}" />
					<Text text="{matTable>Verme}" />
					<Text text="{matTable>Meins}" />
					<Text text="{matTable>Lgtyp}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="Material" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="Description" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<header>
					<Text text="Available" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Unit" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<header>
					<Text text="Source Ty" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>